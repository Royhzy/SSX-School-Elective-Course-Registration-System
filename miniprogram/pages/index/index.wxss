/* 下拉框 */
.select_box {
  background: #fff;
  width: 220rpx;
  /* margin: 0 auto; */
  height: 60rpx;
  text-align: center;
  position: relative;
  float: left;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 86rpx;
  /* border: 1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 26rpx;
  flex: 1;
  color: #666666;
  line-height: 66rpx;
  height: 86rpx;
}

.select_img {
  width: 24rpx;
  height: 30rpx;
  display: block;
  transition: transform 0.3s;
  margin-bottom: 18rpx;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 86rpx;
  width: 220rpx;
  /* border: 1px solid #efefef; */
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
  margin-top: -24rpx;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 26rpx;
  border-bottom: 1px solid #efefef;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-right: 20rpx;
  color: #666666;
  text-align: center;
}

